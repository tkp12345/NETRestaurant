{   
    
	"extends": [
		"eslint:recommended",
		"prettier",
		"plugin:prettier/recommended",
        "prettier/react",
        "plugin:react/recommended",
        "react-app"
	],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures" : {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType" : "module"
    },
	"plugins": ["react","prettier","import", "react-hooks"],
    "ignorePatterns" : ["node_modules/"],
	"rules": {
		"prettier/prettier": "error",
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off"
	}
}